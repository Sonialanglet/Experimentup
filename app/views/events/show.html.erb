

<div class="back">
<%= link_to events_path do %>
<i class="fas fa-arrow-circle-left"> Retour à la liste des activités </i>
<% end %>
</div>


<div class='container'>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="event-title">
        <h1><%= @event.name %></h1>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="participation-event">
      <div class="col-xs-12 col-md-6">
        <div class="event-photo-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path @event.photo %>');">

        </div>

          <p>   <%= @event.teaser %>  </p>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="booking-form">
          <% if @event.date %>
             <p> <strong>Date de l'activité :</strong> <%= @event.date.strftime("%d %B %Y - %H h %M") %></p>
            <% end %>

        <p> <strong> Tarif :</strong>  <%= @event.price_cents/100 %> euros</p>
        <h3> Réservez vos places ! </h3>

          <a target="_blank" href="https://www.billetweb.fr/initiation-au-graff-deviens-tagger"><img style="width:200px;" src="https://www.billetweb.fr/images/buttons/billetterie_bleu.png"></a>


        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="event-long-description">
      <div class="col-xs-12 ">
        <p> <strong>Programme : </strong> </p>
        <p><%= @event.description %></p>



        <p> <strong> Condition de paiement : </strong>
          Nos activités ne sont pas remboursables. En nous prévenant 7 jours avant la date de l’activité concernée, nous pouvons vous proposer de la reporter sur une date ultérieure. Dans ce cas merci de nous écrire à contact@experimentup.com en nous précisant votre demande</p>

      </div>
    </div>
  </div>


<% if current_user.present? %>
  <% if current_user.admin == true %>
    <div class="row">
      <div class="modif-event">
          <%= link_to edit_event_path(@event) do %>
            <p class="btn btn-danger centered"> modifier activité </p>
          <% end %>

      </div>
    </div>
  <% end %>

  <% if current_user.admin == true %>
    <div class="row">
      <div class="modif-event">
          <%= link_to event_path(@event),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
            <p class="btn btn-danger centered">Supprimer</p>
        <% end %>

      </div>
    </div>
  <% end %>
<% end %>

</div>
